<h1><%= @post.title %></h1>
<hr class="small">
<%= @post.body %>
<h5>Posted by <em><%= @post.author.name %></em> on <%= @post.created_at.strftime('%B %d, %Y') %></h5>


<section class="container-fluid">
  <div class="text-center">
    <h1> Other Posts of Interest </h1>
  </div>
  <div class="row">
    <% @posts.sample(4).each do |post| %>
      <div class="col-lg-3 text-center">
        <%= link_to post.title, post %>
        <%= image_tag(@images)%>
      </div>
    <% end %>
  </div>
</section>
